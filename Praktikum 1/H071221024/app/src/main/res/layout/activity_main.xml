<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Pribadi"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="102dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:contentDescription="giyu"
                android:src="@drawable/giyu2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="#E36A6A"
                android:textColor="#BCADAD"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:text="Nama: Rasyad Bimasatya"
                android:textColorHint="#C2BBBB" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Jenis Kelamin:"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:text="Laki-Laki"
                    android:textSize="17sp"
                    android:textColor="@color/white" />
                <RadioButton
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hal yang disukai:"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:textSize="20sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coding"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lainnya"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input1"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:drawableBottom="@color/white"
                    android:hint="Masukkan hal lainnya"
                    android:textColor="@color/white"
                    android:textColorHint="#C3BDBD"
                    android:textSize="19sp"
                    android:inputType="text"
                    android:autofillHints="name"/>
                <Button
                    android:id="@+id/button_oke"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ok"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="290dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</LinearLayout>